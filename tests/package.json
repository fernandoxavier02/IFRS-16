{
  "name": "ifrs16-frontend-tests",
  "version": "1.0.0",
  "description": "Testes para SessionManager do IFRS 16",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "../assets/js/session-manager.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/*.test.js"
    ]
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  }
}
